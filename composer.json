{
	"name": "tatter/fireauth",
	"description": "Myth:Auth Firebase extension for CodeIgniter 4",
	"keywords": [
		"codeigniter",
		"codeigniter4",
		"myth",
		"authentication",
		"firebase",
		"google",
		"cloud"
	],
	"homepage": "https://github.com/tattersoftware/codeigniter-fireauth",
	"license": "MIT",
	"authors": [
		{
			"name": "Matthew Gatner",
			"email": "mgatner@tattersoftware.com",
			"homepage": "https://tattersoftware.com",
			"role": "Developer"
		}
	],
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/codeigniter4/CodeIgniter4"
		},
		{
			"type": "vcs",
			"url": "https://github.com/lonnieezell/myth-auth"
		}
	],
	"minimum-stability": "dev",
	"require": {
		"php" : "^7.2",
		"myth/auth": "dev-develop"
	},
	"require-dev": {
		"phpunit/phpunit" : "^9.5",
		"mockery/mockery": "^1.0",
		"codeigniter4/codeigniter4": "dev-develop"
	},
	"autoload": {
		"psr-4": {
			"Tatter\\Fireauth\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"ModuleTests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"test": "phpunit",
		"post-update-cmd": [
			"composer dump-autoload"
		]
	}
}
